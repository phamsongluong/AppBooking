<%- include('./includes/head.ejs') %>
    <link rel="stylesheet" href="/css/main.css">
</head>

<body>
    <%- include('./includes/navigation.ejs') %>

    <main>
        <h1><%= text %></h1>
        <%   if(isFull) { %>

        <div>

            <strong>Booking slot is Full</strong>

        </div> 

        <% }    %>
       <% if (bookingTypes.length > 0) { %>
        <div class="grid">
            <% for (let bookingType of bookingTypes) { %>
                <article>
                    <h2>
                        <%= bookingType.dataValues.title %>
                    </h2>
                    <p>Slot: <%= bookingType.dataValues.slotBooked %>/<%= bookingType.dataValues.maxCapacity %></p>
                    <form action="/booking" method="POST">
                        <input type="hidden" value="<%= bookingType.dataValues.id %>" name="bookingType">
                        <button class="btn" type="submit">Book</button>
                    </form>
                </article>
            <% } %>
        </div>
        <% } else { %>
            <h1>No Booking Found!</h1>
            <% } %>
    </main>
    
<%- include('./includes/end.ejs') %>